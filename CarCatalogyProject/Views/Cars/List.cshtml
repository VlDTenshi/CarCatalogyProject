@section title{ 
    <h2> All Cars </h2>
}

<h3>@Model.carType</h3>
<div class="row mt-5 mb-2">
@{
    foreach( var car in Model.allCars)
    {
        <div class="col-lg-4">
              <img class="img-thumbnail" src="@car.img" alt="@car.name" />
              <h2>Type: @car.name</h2>
              <p>@car.shortDesc</p>
              <p>Price: @car.price.ToString("C")</p>
              <p><a class="btn btn-warning" href="#">Advanced</a></p>
        </div>
    }
}
</div>